<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_OSWISTIA</name>
    <author>OSTraining</author>
    <creationDate>July 3 2014</creationDate>
    <copyright>Copyright (C) 2014 OSTraining.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>info@ostraining.com</authorEmail>
    <authorUrl>http://www.ostraining.com</authorUrl>
    <version>1.0.4</version>
    <description>PLG_CONTENT_OSWISTIA_DESCRIPTION</description>

    <scriptfile>script.installer.php</scriptfile>

    <files>
        <folder>language</folder>
        <filename plugin="oswistia">oswistia.php</filename>
        <filename>include.php</filename>
        <filename>helper.php</filename>
        <folder>html</folder>
    </files>

    <media destination="plg_content_oswistia" folder="media">
        <folder>js</folder>
    </media>

    <alledia>
        <element publish="true">oswistia</element>

        <namespace>OSWistia</namespace>

        <relatedExtensions>
            <extension
                    type="library"
                    element="allediaframework">AllediaFramework</extension>

            <extension
                    type="plugin"
                    group="system"
                    element="oscarootcertificates"
                    publish="true"
                    ordering="first">OSCARootCertificates</extension>
        </relatedExtensions>

        <obsoleteItems/>
    </alledia>

    <updateservers>
        <server
            type="extension"
            priority="1"
            name="OSWistia Updates"><![CDATA[http://deploy.ostraining.com/updates/joomla/plg_content_oswistia.xml]]></server>
    </updateservers>
</extension>
