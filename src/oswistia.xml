<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_OSWISTIA</name>
    <author>Alledia</author>
    <creationDate>October 15 2014</creationDate>
    <copyright>Copyright (C) 2014 Alledia.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>hello@alledia.com</authorEmail>
    <authorUrl>https://www.alledia.com</authorUrl>
    <version>1.0.5</version>
    <description>PLG_CONTENT_OSWISTIA_DESCRIPTION</description>

    <scriptfile>script.installer.php</scriptfile>

    <alledia>
        <element publish="true">oswistia</element>

        <namespace>OSWistia</namespace>

        <relatedExtensions>
            <extension
                    type="library"
                    element="allediaframework">AllediaFramework</extension>

            <extension
                    type="plugin"
                    group="system"
                    element="oscarootcertificates"
                    publish="true"
                    ordering="first">OSCARootCertificates</extension>
        </relatedExtensions>

        <obsoleteItems/>
    </alledia>

    <files>
        <folder>language</folder>
        <folder>library</folder>
        <folder>views</folder>
        <filename plugin="oswistia">oswistia.php</filename>
        <filename>include.php</filename>
        <filename>helper.php</filename>
        <folder>html</folder>
    </files>

    <media destination="plg_content_oswistia" folder="media">
        <folder>js</folder>
    </media>

    <updateservers>
        <server type="extension" priority="1" name="OSWistia"><![CDATA[https://deploy.ostraining.com/client/update/free/stable/plg_content_oswistia]]></server>
    </updateservers>
</extension>
