<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
    <name>plg_content_oswistia</name>
    <author>Alledia</author>
    <creationDate>October 15 2014</creationDate>
    <copyright>Copyright (C) 2014 Alledia.com</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>hello@alledia.com</authorEmail>
    <authorUrl>https://www.alledia.com</authorUrl>
    <version>1.0.9</version>
    <description>PLG_CONTENT_OSWISTIA_DESCRIPTION</description>

    <alledia>
        <element publish="true">oswistia</element>
        <namespace>OSWistia</namespace>
        <license>free</license>
        <relatedExtensions>
            <extension
                type="library"
                element="allediaframework">AllediaFramework</extension>

            <extension
                type="plugin"
                group="system"
                element="oscarootcertificates"
                publish="true"
                ordering="first">OSCARootCertificates</extension>
        </relatedExtensions>
    </alledia>

    <scriptfile>script.installer.php</scriptfile>

    <files>
        <folder>language</folder>
        <folder>library</folder>
        <folder>views</folder>
        <filename plugin="oswistia">oswistia.php</filename>
        <filename>include.php</filename>
    </files>

    <media destination="plg_content_oswistia" folder="media">
        <folder>images</folder>
        <folder>css</folder>
        <folder>js</folder>
    </media>

    <config>
        <fields name="params" addfieldpath="/libraries/allediaframework/Framework/Joomla/Field">
            <fieldset name="basic">
                <field
                    name="width"
                    type="text"
                    default="425"
                    label="PLG_CONTENT_OSWISTIA_FIELD_WIDTH_LABEL"
                    description="PLG_CONTENT_OSWISTIA_FIELD_WIDTH_DESC"/>

                <field
                    name="height"
                    type="text"
                    default="344"
                    label="PLG_CONTENT_OSWISTIA_FIELD_HEIGHT_LABEL"
                    description="PLG_CONTENT_OSWISTIA_FIELD_HEIGHT_DESC"/>

                <field
                    name="responsive"
                    type="radio"
                    class="btn-group btn-group-yesno"
                    default="1"
                    label="PLG_CONTENT_OSWISTIA_FIELD_REPSONSIVE_LABEL"
                    description="PLG_CONTENT_OSWISTIA_FIELD_REPSONSIVE_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field type="GoPro" name="allediaplans" label="" description="" class="ost-gopro" />

            </fieldset>
        </fields>
    </config>

    <updateservers>
        <server type="extension" priority="1" name="OSWistia"><![CDATA[https://deploy.ostraining.com/client/update/free/stable/plg_content_oswistia]]></server>
    </updateservers>
</extension>
